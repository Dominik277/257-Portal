<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="Portal.fragmenti.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountsFragment"
        android:name="Portal.fragmenti.AccountsFragment"
        android:label="Accounts"
        tools:layout="@layout/fragment_accounts"/>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="Portal.fragmenti.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard"/>
    <fragment
        android:id="@+id/profileFragment"
        android:name="Portal.fragmenti.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="Portal.fragmenti.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"/>
</navigation>