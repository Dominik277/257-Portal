<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/naslovStari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naslov" />

        <EditText
            android:id="@+id/naslovNovi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naslov" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cijenaStari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cijena" />

        <EditText
            android:id="@+id/cijenaNovi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cijena" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/lokacijaStari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lokacija" />

        <EditText
            android:id="@+id/lokacijaNovi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lokacija" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/brojStari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Broj" />

        <EditText
            android:id="@+id/brojNovi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Broj" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/clanakStari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clanak" />

        <EditText
            android:id="@+id/clanakNovi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clanak" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gumbAzuriraj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Azuriraj" />

        <Button
            android:id="@+id/gumbObrisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Obrisi" />
    </LinearLayout>

</LinearLayout>