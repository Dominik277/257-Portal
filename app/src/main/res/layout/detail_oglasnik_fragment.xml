<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detailOglasnikImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/jaksic" />

    <TextView
        android:id="@+id/detailOglasnikNaslov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/detailOglasnikImage"
        android:text="NK Jakšić izbacio NK BSK Buk iz četvrtfinala kupa NS PSŽ"
        android:textColor="#000"
        android:textSize="26dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/detailOglasnikNaslov"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/linearLayoutCijena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/detailOglasnikNaslov"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cijena:"
            android:textColor="#000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/detailOglasnikCijena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#000"
            android:text="10kn/kg"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutLokacija"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/linearLayoutCijena"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokacija:"
            android:textColor="#000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/detailOglasnikLokacija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:text="Treštanovci"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBroj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/linearLayoutLokacija"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj:"
            android:textColor="#000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/detailOglasnikBroj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0979780078"
            android:textSize="20dp"
            android:textColor="#000"/>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/linearLayoutBroj"
        android:background="@color/black" />

    <TextView
        android:id="@+id/detailOglasnikClanak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/separator"
        android:layout_marginTop="20dp"
        android:text="NK Jakšić nakon penala je uspio izboriti pobjedu protiv rivala NK BSK Buk
na domaćem terenu pred brojnom publikom.Nakon 90 minuta nije bilo pobjednika
te se nakon toga pristupilo jedanaestercima u kojima je NK Jakšić bio spretniji i sretniji te
osigurao prolazak dalje"
        android:textColor="#000"
        android:textSize="20dp" />

</RelativeLayout>