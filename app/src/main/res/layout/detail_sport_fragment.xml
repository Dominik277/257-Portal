<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detailSportImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/jaksic" />

        <TextView
            android:id="@+id/detailSportNaslov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailSportImage"
            android:layout_margin="10dp"
            android:text="NK Jakšić izbacio NK BSK Buk iz četvrtfinala kupa NS PSŽ"
            android:textColor="#000"
            android:textSize="26dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/detailSportNaslov"
            android:background="@color/black" />

        <TextView
            android:id="@+id/detailSportClanak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailSportNaslov"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:text="NK Jakšić nakon penala je uspio izboriti pobjedu protiv rivala NK BSK Buk
na domaćem terenu pred brojnom publikom.Nakon 90 minuta nije bilo pobjednika
te se nakon toga pristupilo jedanaestercima u kojima je NK Jakšić bio spretniji i sretniji te
osigurao prolazak dalje"
            android:textColor="#000"
            android:textSize="20dp" />

    </RelativeLayout>
</ScrollView>